@model ContainerDeleteModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">コンテナ "@Model.Name" を削除しますか？</h4>
</div>
@using (Html.BeginForm("Delete", "Container", new { id = Model.Id }))
{
    <div class="modal-body">
        <dl class="wrapper1">
            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>
            <dt>@Html.DisplayNameFor(model => model.Accessibility)</dt>
            <dd>@Html.DisplayFor(model => model.Accessibility)</dd>
            <dt>@Html.DisplayNameFor(model => model.CreatedUtcDateTime)</dt>
            <dd>@Html.DisplayFor(model => model.CreatedUtcDateTime)</dd>
            <dt>@Html.DisplayNameFor(model => model.LastModifiedUtcDateTime)</dt>
            <dd>@Html.DisplayFor(model => model.LastModifiedUtcDateTime)</dd>
        </dl>
        <hr />
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.IsPublic)
        @Html.HiddenFor(model => model.CreatedUtcDateTime)
        @Html.HiddenFor(model => model.LastModifiedUtcDateTime)

        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            この操作は取り消すことができません。コンテナ内のBLOBも同時に削除されます。
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-lg btn-danger"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
    </div>
}
