@model AccountEditModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">アクセスキーの管理</h4>
</div>
@using (Html.BeginForm("Edit", "Account"))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Name)
    <div class="modal-body">
        <dl class="wrapper1">
            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>
        </dl>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.LabelFor(model => model.PrimaryAccessKey)
        <div class="form-group">
            <div class="input-group">
                @Html.EditorFor(model => model.PrimaryAccessKey, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"}})
                <span class="input-group-btn">
                    <a href="#" class="btn btn-warning btn-maintain-key" data-key-bind="#PrimaryAccessKey" data-url="@Url.Action("GenerateKey")">再生成</a>
                </span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SecondaryAccessKey)
            <div class="input-group">
                @Html.EditorFor(model => model.SecondaryAccessKey, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"}})
                <span class="input-group-btn">
                    <a href="#" class="btn btn-warning btn-maintain-key" data-key-bind="#SecondaryAccessKey" data-url="@Url.Action("GenerateKey")">再生成</a>
                </span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
    </div>
}