@model BlobDeleteModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">BLOBを削除しますか？</h4>
</div>
<div class="modal-body">
    <dl class="wrapper1">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <dt>@Html.DisplayNameFor(model => model.ContentType)</dt>
        <dd>@Html.DisplayFor(model => model.ContentType)</dd>
        <dt>@Html.DisplayNameFor(model => model.Size)</dt>
        <dd>@Html.DisplayFor(model => model.Size)</dd>
        <dt>@Html.DisplayNameFor(model => model.LastModifiedUtcDateTime)</dt>
        <dd>@Html.DisplayFor(model => model.LastModifiedUtcDateTime)</dd>
    </dl>
</div>
<div class="modal-footer">
    @using (Html.BeginForm("Delete", "Blob", new { id = Model.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button class="btn btn-lg btn-danger"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
        </div>
    }
</div>
