@model BlobViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Are you sure you want to delete this blob?</h4>
</div>
<div class="modal-body">
    <dl class="wrapper1">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <dt>@Html.DisplayNameFor(model => model.ContentType)</dt>
        <dd>@Html.DisplayFor(model => model.ContentType)</dd>
        <dt>@Html.DisplayNameFor(model => model.SizeString)</dt>
        <dd>@Html.DisplayFor(model => model.SizeString)</dd>
        <dt>@Html.DisplayNameFor(model => model.LastModifiedUtcDateTime)</dt>
        <dd>@Html.DisplayFor(model => model.LastModifiedUtcDateTime)</dd>
    </dl>
</div>
<div class="modal-footer">
    @using (Html.BeginForm("DeleteBlob", "Blob", new { containerName = ViewBag.ContainerName, name = Model.Name }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>
