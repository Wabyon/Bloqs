@model AccountDeleteModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">アカウント "@Model.Name" を削除しますか？</h4>
</div>
@using (Html.BeginForm("Delete", "Account", new { id = Model.Id }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Name)
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            この操作は取り消すことができません。コンテナとBLOBも同時に削除されます。
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmName)
            @Html.EditorFor(model => model.ConfirmName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ConfirmName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-lg btn-danger"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
    </div>
}
