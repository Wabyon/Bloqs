@model ContainerKeyEditModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">@Model.Name</h4>
</div>
@Html.HiddenFor(model => model.Name)
<div class="modal-body">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.LabelFor(model => model.PrimaryAccessKey)
    <div class="form-group">
        <div class="input-group">
            @Html.EditorFor(model => model.PrimaryAccessKey, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            <span class="input-group-btn">
                <button class="btn btn-warning btn-maintain-key" data-url="@Url.Action("RecreateAccessKey", new { name = Model.Name })" data-keyno="1">Recreate</button>
            </span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SecondaryAccessKey)
        <div class="input-group">
            @Html.EditorFor(model => model.SecondaryAccessKey, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            <span class="input-group-btn">
                <button class="btn btn-warning btn-maintain-key" data-url="@Url.Action("RecreateAccessKey", new { name = Model.Name })" data-keyno="2">Recreate</button>
            </span>
        </div>
    </div>
</div>
