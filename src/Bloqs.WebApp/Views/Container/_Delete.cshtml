@model ContainerDeleteModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Are you sure you want to delete this container "@Model.Name"?</h4>
</div>
@using (Html.BeginForm("Delete", "Container", new { name = Model.Name }))
{
    <div class="modal-body">
        <dl class="wrapper1">
            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>
            <dt>@Html.DisplayNameFor(model => model.Accessibility)</dt>
            <dd>@Html.DisplayFor(model => model.Accessibility)</dd>
            <dt>@Html.DisplayNameFor(model => model.Owner)</dt>
            <dd>@Html.DisplayFor(model => model.Owner)</dd>
            <dt>@Html.DisplayNameFor(model => model.CreatedUtcDateTime)</dt>
            <dd>@Html.DisplayFor(model => model.CreatedUtcDateTime)</dd>
            <dt>@Html.DisplayNameFor(model => model.LastModifiedUtcDateTime)</dt>
            <dd>@Html.DisplayFor(model => model.LastModifiedUtcDateTime)</dd>
        </dl>
        <hr />
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.IsPublic)
        @Html.HiddenFor(model => model.Owner)
        @Html.HiddenFor(model => model.CreatedUtcDateTime)
        @Html.HiddenFor(model => model.LastModifiedUtcDateTime)
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            This action CANNOT be undone. This will permanently delete all blobs.
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmName)
            @Html.EditorFor(model => model.ConfirmName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ConfirmName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
}
